<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-2 mt-3"></div>

                <div class="col-lg-8 mt-3">
                    <h1 class="text-center">Editar Exercicio</h1>
                            <form action=<%=`/exercicio/edit/${exercicio.id}` %> method="post">
                                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                <div class="mb-3">
                                    <label for="grupo" class="form-label">Grupo Muscular</label>
                                    <select class="form-select" id="grupo" name="grupo">
                                        <option selected value="<%= exercicio.grupo %>"><%= exercicio.grupo %></option>
                                        <option value="A">A</option>
                                        <option value="B">B</option>
                                        <option value="C">C</option>
                                        <option value="D">D</option>
                                        <option value="E">E</option>
                                    </select>
                                    <div class="mb-3">
                                        <div class="mb-3">
                                            <label for="nome" class="form-label">Nome do Exercicio</label>
                                            <input value="<%= exercicio.nome %> " name="nome" type="text" class="form-control" id="nome">
                                            <div class="mb-3">
                                                <label for="desc" class="form-label">Descriçao</label>
                                                <input value="<%= exercicio.desc %>" name="desc" type="text" class="form-control" id="desc">
                                            </div>
                                            <div class="mb-3">
                                                <label for="serie" class="form-label">Serie</label>
                                                <input value="<%= exercicio.serie %>" name="serie" type="number" class="form-control" id="serie">
                                            </div>
                                            <div class="mb-3">
                                                <label for="repeticao" class="repeticao">Repetiçao</label>
                                                <input value="<%= exercicio.repeticao %>" name="repeticao" type="number" class="form-control"
                                                    id="repeticao">
                                            </div>
                                            <div class="d-grid gap-2 col-6 mx-auto">
                                                <button type="submit" class="btn btn-primary">Editar</button>
                                            </div>
                            </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 mt-3"></div>
        </div>
        <%- include('includes/footer') %>
            <%- include('includes/footer') %>