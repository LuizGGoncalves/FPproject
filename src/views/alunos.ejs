<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-2 mt-3"></div>

                <div class="col-lg-8 mt-3">
                    <h1>Lista de Alunos</h5>
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Nome</th>
                                        <th scope="col">peso</th>
                                        <th scope="col">altura</th>
                                        <th scope="col">IMC</th>
                                        <th scope="col">Treino Atual</th>
                                        <th scope="col">Aluno Ativo</th>
                                        <th scope="col">Modificar</th>
                                        <th scope="col">Criar novo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(alunos){ %>
                                        <% alunos.forEach(aluno=> { %>
                                            <tr>
                                                <td class="text-center">
                                                    <%= aluno.name %>
                                                </td>
                                                <td class="text-center">
                                                    <%= aluno.peso %>
                                                </td>
                                                <td class="text-center">
                                                    <%= aluno.altura%>
                                                </td>
                                                <td class="text-center">
                                                    <%= aluno.imc%>
                                                </td>
                                                <td class="text-center">
                                                  <%= aluno.activeTraining%>
                                                </td>
                                                <td class="text-center">
                                                    <%= aluno.alunoActive%>
                                                </td>
                                                <td>
                                                    <a href="http://">
                                                        <button type="button" class="btn btn-sm btn-outline-light">Modificar Treino</button>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="http://">
                                                        <button type="button" class="btn btn-sm btn-outline-light">Modificar Treino</button>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } %>
                                </tbody>
                            </table>
                <div class="col-lg-2 mt-3"></div>
        </div>
    </div>
        <%- include('includes/footer') %>