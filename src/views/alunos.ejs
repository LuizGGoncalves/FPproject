<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-2 mt-3"></div>

                <div class="col-lg-8 mt-3">
                    <h1>Lista de Alunos</h1>
                    <div class="table-reponsive">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">peso</th>
                                    <th scope="col">altura</th>
                                    <th scope="col">IMC</th>
                                    <th scope="col">Treino Atual</th>
                                    <th scope="col">Atividade</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(alunos){ %>
                                    <% alunos.forEach(aluno=> { %>
                                        <tr>
                                            <td>
                                                <%= aluno.name %>
                                            </td>
                                            <td>
                                                <%= aluno.peso %>
                                            </td>
                                            <td>
                                                <%= aluno.altura%>
                                            </td>
                                            <td>
                                                <%= aluno.imc%>
                                            </td>
                                            <td>
                                                <%= aluno.treinoName%>
                                            </td>
                                            <td>
                                                <% if(aluno.alunoActive){ %>
                                                    Ativo
                                                    <% }else { %>
                                                        Nao Ativo
                                                        <% } %>
                                            </td>
                                            <td>
                                                <a href=<%=`/treino/index/${aluno.id}`%>>
                                                    <button type="button"
                                                        class="btn btn-sm btn-outline-light">Visualizar</button>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-lg-2 mt-3"></div>
                </div>
            </div>


            <%- include('includes/footer') %>